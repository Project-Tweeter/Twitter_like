<main id="home_main">

<section id="login_left">
    <img class="login-img" src="/assets/images/twitter.svg" alt="">
    <div class="login_left-container">
        <a class="login_left-link_home" href="/home/{{username}}"> <img class="login-img" src="/assets/images/home.svg" alt=""> Accueil</a>
    </div>
    <div class="login_left-container">
        <a class="login_left-link_profil" href="/profil/{{username}}"> <img class="login-img" src="/assets/images/user.svg" alt=""> Profil</a>
    </div>
    <div class="login_left-container">
        <a class="login_left-link_profil" href="/logout"> <img class="login-img" src="/assets/images/criss-cross.svg" alt="">Logout</a>
    </div>
</section>

<section id="login_center">
    <div class="login_container1">
        <h1 class="login_container1-title">Accueil</h1>
    </div>
    <div class="login_container2">
        <form action="/home/:username" method="post" class="login-form">
            <div class="login-form_tweet">
                <label class="login-form_label">
                    <textarea id="message" name="message" placeholder="Quoi de neuf ?" cols="50"  maxlength="140">
                    </textarea>
                </label>
            </div>
            <button type="submit "class="login-button">Tweeter</button>
        </form>
    </div>
    <div class="login_container3"></div>

    {{#each message}} 
    <div class="login_container4">
        <div class="login_container4-tweet">
            <div class="login_container4-img">
                <a href="/profil/{{username}}"><img src="{{link}}"></a>
            </div>
            <div class="login_container4-content">
                <div class="name"> 
                   <a href="/profil/{{username}}">{{username}}</a>
                    {{moment created_at "fromNow"}}
                </div>
                <div class="content">
               <p>{{ content }}</p>
                </div>
            </div>
        </div>
        </div>
    </div>
    {{/each}} 
    

</section>

<section id="login_right">
    <h1>suggestions</h1>
    {{!-- {{#each user}} --}}
    <div class="login_right-container">
        <div class="login_right-container">
            <a href=""><img src="" alt=""></a>
        </div>
        <div>
            <a href="">User</a>
        </div>
        <div>
            <form action="/home/:username" method="post">
                <button type="submit "class="login-button">Follow</button>
            </form>
        </div>
    </div>
    {{!-- {{#each user}} --}}
</section>

</main>